# Source zplug
source "$HOME/.zplugrc"

# powerline9k theme
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(time dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(vi_mode nvm chruby)
POWERLEVEL9K_DISABLE_RPROMPT=falsme

POWERLEVEL9K_VI_INSERT_MODE_STRING=""
POWERLEVEL9K_VI_COMMAND_MODE_STRING="NOR"
POWERLEVEL9K_VI_MODE_NORMAL_BACKGROUND="blue"
POWERLEVEL9K_VI_MODE_NORMAL_FOREGROUND="white"

POWERLEVEL9K_DIR_HOME_FOREGROUND="black"
POWERLEVEL9K_DIR_HOME_BACKGROUND="012"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND="white"
POWERLEVEL9K_SHORTEN_DIR_LENGTH=1
POWERLEVEL9K_SHORTEN_DELIMITER=""
POWERLEVEL9K_SHORTEN_STRATEGY="truncate_from_right"

POWERLEVEL9K_BATTERY_CHARGED_FOREGROUND="black"
POWERLEVEL9K_BATTERY_CHARGED_BACKGROUND="002"
POWERLEVEL9K_BATTERY_LOW_FOREGROUND="011"
POWERLEVEL9K_BATTERY_LOW_BACKGROUND="009"
POWERLEVEL9K_BATTERY_CHARGING_FOREGROUND="000"
POWERLEVEL9K_BATTERY_CHARGING_BACKGROUND="003"

POWERLEVEL9K_MODE='nerdfont-complete'

# Source FZF
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export FZF_DEFAULT_COMMAND='rg --files --no-ignore --hidden --follow --glob "!.git/*"'

# Source aliases file
source $HOME/.aliases
if [ "$(uname)" == "Darwin" ]; then
  source $HOME/.mac_aliases
elif [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then
  source $HOME/.linux_aliases
fi

# nvm integration
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh" # This loads nvm

# yarn integration
export PATH="$PATH:`yarn global bin`"
